@import 'nib'

position()
  if arguments[0] == cover
    position: absolute
    left: 0
    right: 0
    top: 0
    bottom: 0
  else
    position: arguments

.board-wrapper
  position: cover

  .board-canvas
    position: cover
    transition: margin .1s

    &.is-sibling-sidebar-open
      margin-right: 248px

    .lists
      align-items: flex-start
      display: flex
      flex-direction: row
      margin: 0 0 10px
      padding: 0 40px 5px 0
      position: cover
      overflow: auto

    .board-overlay
      position: cover
      top: -100px
      right: -400px
      background: black
      opacity: 0.33
      animation: fadeIn 0.2s
      z-index: 16

    &.is-dragging-active
      .open-minicard-composer,
      .minicard-wrapper.is-checked
        display: none

@media screen and (max-width: 800px)
  #content
    .board-wrapper
      .board-canvas
        .ui-sortable
          display: block
          padding: 5px 10px 5px 0
          .js-list
            width: 100%