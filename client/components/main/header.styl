@import 'nib'

#header
  background-color: #CCCCFF

  #header-main-bar
    height: 35px
    display: flex;
    justify-content: space-between;

    .board-header-btns
      color: floralwhite;
      line-height: 35px;
      .return
        display: block;
        font-size: 1.6rem;
        margin: 0 10px;

      &.right
        padding-top: 2px

        a
          float:left
          line-height: 35px

    .board-header-btn
      text-align: center;
      font-size: 0.9rem;
      overflow: hidden
      height: 28px;
      border-radius: 5px
      position: relative
      margin: 0 3px;

      .js-member
        margin:0

      i.fa
        float: left
        display: block
        line-height: 28px
        color: darken(white, 5%)
        margin: 0 8px

        + span
          display: inline-block
          margin-top: 1px
          margin-right: 10px

      .board-header-btn-close
        float: right

        i.fa
          margin: 0 6px

      .avatar
          background: 0
          border-radius: 3px
          top: -1px
          left: 2px

    .board-header-btn:hover
      background: #FFFF99
      box-shadow: 2px 3px #a2cc61

    .js-open-archived-board
      width: 80px;
      text-align: center;

    .js-open-world-board
      width: 90px;

    .board-header-btn:active
      box-shadow: 0px 0px #717a33
      top: 4px

    .separator
      margin: 2px 4px
      border-left: 1px solid rgba(255, 255, 255, .3)
      height: 24px
      float: left

    .title
      font-size: 1.6rem;

#header-quick-access
  color: white
  transition: background-color 0.4s
  background: #2573a7
  height: 28px
  font-size: 12px
  display: flex

  #header-user-bar,#header-new-board-icon,ul li
    color: darken(white, 17%)

    .fa
      color: inherit

    a:hover, a.is-active
      color: white

  ul
    transition: opacity 0.2s
    margin: 4px 0 0 5px
    overflow: hidden
    font-size: initial

    li
      display: block
      float: left
      width: auto
      color: darken(white, 15%)
      padding: 2px 5px 0

      &.current
        color: darken(white, 5%)

      &:first-child .fa-home
        margin-right: 5px

      a.js-create-board
        margin-left: 5px

  #header-user-bar,#header-new-board-icon
    flex-shrink: 0

  #header-user-bar
    margin: 2px 0
    height: 28px;
    float: right;

    .header-user-bar-avatar
      float: left
      position: relative
      top: -5px
      margin-right: 5px

      .member
        width: 24px
        height: @width
        margin: 0
        margin-top: 1px

    .header-user-bar-name
      margin: 4px 8px 0 0
      float: left

      i.fa-chevron-down
        margin-right: 4px

  #header-new-board-icon
    flex-grow: 1
    margin: 6px 5px 0
    width: 12px

@media screen and (max-width: 800px)
  #header
    #header-main-bar
      height: 35px

      .board-header-btns
        margin-top: 0px
        &.title
          a
            display:none

      .board-header-btn
        height: 29px
        line-height: @height
        font-size: 16px

        i.fa
          line-height: 32px

          + span
            display: none

  #header-quick-access
    transition: background-color 0.4s
    width: 100%
    padding: 10px 0px
    z-index: 30
    position: absolute
    bottom: 0px

    ul
      width: calc(100% - 150px)
      overflow: ellipsis

      li
        height: 28px

.offline-warning
  width: 100%
  text-align: center
  padding: 0
  margin: 0
  background: #F8ECBD
  clear: both

  p
    margin: 7px
    padding: 0
