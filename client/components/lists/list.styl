.list
  display: flex
  flex-direction: column
  position: relative
  background-color: lightblue;
  border-radius: 3px;
  margin: 4px;
  width: 300px

  &.list-composer, & .list-composer
    .open-list-composer
      text-align: center;
      display: block;
      width: 100%;

    .list-name-input
      background: white
      font-size: 0.8rem;
      height: 30px;

.list-header
  margin: 8px 8px 3px
  min-height: 20px
  max-height: 35px
  .inlined-form
    .fa-check
      background: rgba(255, 255, 255, 0)
      font-size: 18px
      padding: 0
      margin: 0
      line-height: 0
      position: relative
      bottom: 42px
      right: 6px
      float: right

  .list-header-name
    font-size: 1rem;
    line-height: 1rem;
    margin: 0;
    height: 1rem;
    overflow: hidden;
    word-wrap: break-word;
    width: 90%;
    white-space: nowrap;
    text-overflow: ellipsis;

  .list-header-menu-icon
    position: absolute;
    top: 0.5rem;
    right: 1rem;

.list-body
  overflow-y: auto
  padding: 0 8px 5px 8px

  .minicards
    padding-top: 5px;
    border-top: 2px solid #737892

    form
      margin-bottom: 9px
      display: flex;
      .fa-check
        font-size: 20px;
        position: relative;
      .add-controls
        position: absolute;
        bottom: 1.4rem;
        right: 0.8rem;
        height: 34px;

  .ps-scrollbar-y-rail
    transform: translateX(2px)

  .open-minicard-composer
    border-radius: 2px
    color: black
    display: block
    position: relative
    text-decoration: none
    animation: fadeIn 0.3s
    text-align: right;

    i.fa
      margin-right: 7px

    &:hover
      background: rgb(191, 211, 241)
      color: #222
      box-shadow: 0 1px 2px rgba(0,0,0,.2)
