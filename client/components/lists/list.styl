@import 'nib'

.list
  box-sizing: border-box
  display: flex
  flex-direction: column
  flex: 0 0 270px
  position: relative
  background-color: rgba(135, 206, 235, 0.62)
  border-radius: 6px
  margin: 4px;
  float: left
  min-width: 300px

  &:first-child
    margin-left: 5px

  &.ui-sortable-helper
    box-shadow: -2px 2px 8px rgba(0, 0, 0, .3),
                0 0 1px rgba(0, 0, 0, .5)
    transform: rotate(4deg)
    cursor: grabbing

    .list-header.ui-sortable-handle
      cursor: grabbing

  &.placeholder
    background-color: rgba(0, 0, 0, .2)
    border-color: transparent
    box-shadow: none
    height: 100px

  &.list-composer, & .list-composer
    .open-list-composer
      color: black
      font-size: initial
      left: 80px
      position: relative

    .list-name-input
      background: white
      margin: -3px 0 8px
.list-header
  flex: 0 0 auto
  margin: 8px 12px 3px
  position: relative
  min-height: 20px
  max-height: 34px
  .inlined-form
    .fa-check
      background: rgba(255, 255, 255, 0)
      font-size: 18px
      padding: 0
      margin: 0
      line-height: 0
      position: relative
      bottom: 42px
      right: 6px
      float: right

  &.ui-sortable-handle
    float: left

  .list-header-name
    display: block
    font-size: 16px
    line-height: 17px
    margin: 0
    font-weight: bold
    min-height: 9px
    overflow: hidden
    text-overflow: ellipsis
    word-wrap: break-word
    width: 90%;
    white-space: nowrap;
    text-overflow: ellipsis;

  .list-header-menu-icon
    position: absolute
    padding: 7px
    margin-top: 1px
    top: -@padding
    right: -2px

.list-body
  flex: 1
  display: flex
  overflow-y: auto
  padding: 5px 11px

  .minicards
    flex: 1
    padding-top: 5px;
    border-top: 2px solid #737892

    form
      margin-bottom: 9px
      .fa-check
        font-size: 16px

  .ps-scrollbar-y-rail
    transform: translateX(2px)

  .open-minicard-composer
    border-radius: 2px
    color: black
    display: block
    position: relative
    text-decoration: none
    animation: fadeIn 0.3s
    text-align: right;

    i.fa
      margin-right: 7px

    &:hover
      background: rgb(191, 211, 241)
      color: #222
      box-shadow: 0 1px 2px rgba(0,0,0,.2)

@media screen and (max-width: 800px)
  #content
    .js-list-header
      .list-header-menu-icon
        right: -2px