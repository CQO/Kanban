@import 'nib'

.list
  display: flex
  flex-direction: column
  flex: 0 0 270px
  position: relative
  background-color: rgba(135, 206, 235, 0.62)
  border-radius: 6px
  margin: 4px;
  min-width: 300px

  &.ui-sortable-helper
    box-shadow: -2px 2px 8px rgba(0, 0, 0, .3),
                0 0 1px rgba(0, 0, 0, .5)
    transform: rotate(4deg)
    cursor: grabbing

    .list-header.ui-sortable-handle
      cursor: grabbing

  &.placeholder
    background-color: rgba(0, 0, 0, .2)
    border-color: transparent
    box-shadow: none
    height: 100px

  &.list-composer, & .list-composer
    .open-list-composer
      color: black
      font-size: initial
      left: 95px
      position: relative

    .list-name-input
      background: white
      margin: -3px 0 8px
.list-header
  margin: 8px 12px 3px
  min-height: 20px
  max-height: 35px
  .inlined-form
    .fa-check
      background: rgba(255, 255, 255, 0)
      font-size: 18px
      padding: 0
      margin: 0
      line-height: 0
      position: relative
      bottom: 42px
      right: 6px
      float: right

  .list-header-name
    font-size: 1rem;
    line-height: 1rem;
    margin: 0;
    height: 1rem;
    overflow: hidden;
    word-wrap: break-word;
    width: 90%;
    white-space: nowrap;
    text-overflow: ellipsis;

  .list-header-menu-icon
    position: absolute;
    top: 0.5rem;
    right: 1rem;

.list-body
  overflow-y: auto
  padding: 0 11px 5px 11px

  .minicards
    padding-top: 5px;
    border-top: 2px solid #737892

    form
      margin-bottom: 9px
      display: flex;
      .fa-check
        font-size: 20px;
        position: relative;
      .add-controls
        position: absolute;
        bottom: 1.4rem;
        right: 0.8rem;
        height: 34px;

  .ps-scrollbar-y-rail
    transform: translateX(2px)

  .open-minicard-composer
    border-radius: 2px
    color: black
    display: block
    position: relative
    text-decoration: none
    animation: fadeIn 0.3s
    text-align: right;

    i.fa
      margin-right: 7px

    &:hover
      background: rgb(191, 211, 241)
      color: #222
      box-shadow: 0 1px 2px rgba(0,0,0,.2)
