.list
  display: flex;
  flex-direction: column;
  background-color: #ccfffd;
  border: 1px solid #c5d7ff;
  border-radius: 5px;
  margin: 4px;
  width: 300px;
  box-shadow: -1px 1px 1px #888888;

  &.list-composer, & .list-composer
    .open-list-composer
      text-align: center;
      display: block;
      width: 100%;

    .list-name-input
      background: white
      font-size: 0.8rem;
      height: 30px;

.list-header
  margin: 0 10px
  min-height: 20px
  max-height: 35px
  position: relative;
  display: flex;

  .inlined-form
    width: 100%;
    .fa-check
      background: 0;
      border: 0;
      font-size: 18px;
      padding: 0;
      margin: 0;
      line-height: 0;
      position: absolute;
      bottom: 15px;
      right: 6px;

  .list-header-name
    font-size: 1rem;
    line-height: 30px;
    margin: 0;
    height: 30px;
    overflow: hidden;
    word-wrap: break-word;
    width: 265px;
    white-space: nowrap;
    text-overflow: ellipsis;

  .list-header-menu-icon
    height: 30px
    line-height: 30px
    font-size: 1rem

.list-body
  overflow-y: auto
  padding: 0 8px 5px 8px

  .minicards
    padding-top: 5px;
    border-top: 2px solid #737892

    form
      margin-bottom: 9px
      display: flex;
      .fa-check
        font-size: 20px;
        position: relative;
      .add-controls
        position: absolute;
        bottom: 1.4rem;
        right: 0.8rem;
        height: 34px;

  .ps-scrollbar-y-rail
    transform: translateX(2px)

  .open-minicard-composer
    border-radius: 2px
    color: black
    display: block
    position: relative
    text-decoration: none
    animation: fadeIn 0.3s
    text-align: right;

    i.fa
      margin-right: 7px

    &:hover
      background: rgb(191, 211, 241)
      color: #222
      box-shadow: 0 1px 2px rgba(0,0,0,.2)
